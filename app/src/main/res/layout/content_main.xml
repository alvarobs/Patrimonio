<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    >

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="16dp"
        android:id="@+id/btnDefinirLocal"
        android:text="Definir Local"
        android:onClick="definirLocal"
        />
    <TextView
        android:id="@+id/localDefinido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Falta Definir o Local"

        />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/btnInventariar"
        android:text="Inventariar"
        android:onClick="inventariar"
        android:enabled="false"
        />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/btnConcluir"
        android:text="Concluir / Enviar"
        android:onClick="concluirEnviar"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/inventario_1"
        /></LinearLayout>
